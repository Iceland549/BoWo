{
  "Routes": [
    // ---------- HEALTH CHECKS ----------
    {
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/health/auth",
      "UpstreamHttpMethod": [ "GET" ]
    },
    {
      "DownstreamPathTemplate": "/health",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "content",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/health/content",
      "UpstreamHttpMethod": [ "GET" ]
    },

    // ---------- AUTH ----------
    {
      "DownstreamPathTemplate": "/auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/auth/{everything}",
      "UpstreamHttpMethod": [ "POST" ]
    },
    {
      "DownstreamPathTemplate": "/account/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/account/{everything}",
      "UpstreamHttpMethod": [ "POST", "GET", "PUT", "DELETE" ]
    },
    {
      "DownstreamPathTemplate": "/service-auth/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "auth",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/service-auth/{everything}",
      "UpstreamHttpMethod": [ "POST" ]
    },

    // ---------- CONTENT ----------
    {
      "DownstreamPathTemplate": "/content/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "content",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/content/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ]
    },

    // ---------- QUIZ ----------
    {
      "DownstreamPathTemplate": "/quiz/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "content",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/quiz/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    },

    // ---------- USER PROGRESS ----------
    {
      "DownstreamPathTemplate": "/progress/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "content",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/progress/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "Bearer",
        "AllowedScopes": []
      }
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://gateway:5000"
  }
}
